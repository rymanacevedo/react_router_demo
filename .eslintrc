{
  "parser": "@typescript-eslint/parser",
  "extends": ["react-app",
  "react-app/jest","airbnb-typescript", "prettier"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "ignorePatterns": ["src/i18n.js"],
  "plugins": ["prettier", "import"],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all",
        "jsxBracketSameLine": true,
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": true,
        "semi": true
      }
    ],
    "no-unused-vars": "error",
    "no-console": "warn",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx",
          ".tsx"
        ]
      }
    ]
  }
}
